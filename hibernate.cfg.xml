<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>    <session-factory>
    <property name="connection.driver_class">org.mariadb.jdbc.Driver</property>
    <property name="hibernate.connection.url"></property>
    <property name="hibernate.connection.username"></property>
    <property name="hibernate.connection.password"></property>
    <property name="hibernate.connection.pool_size">16</property>
    <property name="show_sql">true</property>
    <property name="format_sql"></property>
    <property name="dialect">org.hibernate.dialect.MariaDB10Dialect</property>

    <!-- User Control Tables -->
    <mapping class="entity.Message"/>
    <mapping class="entity.Board"/>
    <mapping class="entity.BoardInfo"/>


</session-factory>
</hibernate-configuration>